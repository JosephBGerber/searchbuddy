{
    "manifest_version": 2,
    "name": "searchbuddy",
    "description": "Make friends while searching.",
    "version": "1.0.0",
    "browser_action": {
        "default_icon": "logo-128.png",
        "default_title": "searchbuddy"
    },
    "background": {
        "scripts": [
            "js/backgroundPage.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.google.com/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "icons": {
        "16": "logo-16.png",
        "48": "logo-48.png",
        "128": "logo-128.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "notifications",
        "http://*/",
        "https://*/",
        "ws://*/",
        "wss://*/",
        "webRequest"
    ],
    "web_accessible_resources": [
        "icon-red-16.png",
        "searchbuddy.html",
        "js/searchbuddy.js",
        "rats.gif",
        "sleep-16.png",
        "sleep-48.png",
        "sleep-128.png",
        "starry-16.png",
        "starry-48.png",
        "starry-128.png"
    ]
}
